%p
  = render :_search_form, layout: false
- if @posts
  .row
    .col-sm-7
      = render :_posts, layout: false
    - unless @posts.empty?
      .col-sm-3
        %p#conditions
          =# render :_conditions, layout: false
      .col-sm-2
        %p#authors
          =# render :_authors, layout: false
%p
  - if url_for(only_path: true) != "/"
    [
    = link_to("ページ上部に移動", "#")
    ]
